@model Landing.PL.Areas.Dashbord.ViewModels.BuildingVM

@{
    ViewData["Title"] = "Delete";
}

@section Header {
    <h2>Delete</h2>
}
<div class="col-md-12">
    <div class="card card-danger">
        <div class="card-header">
            <h3>Delete</h3>
        </div>

        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this?</h3>
        </div>

        <div class="card-footer">
            <form asp-action="delete" asp-controller="Building">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" asp-controller="Building" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>