@model BuildingFormVM


@section Header {
      create

}
<div class="col-md-12">

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create Building</h3>
        </div>


        <form asp-controller="Building" asp-action="create" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="DetailsBuilding"></label>
                    <input asp-for="DetailsBuilding " class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Bedrooms"></label>
                    <input asp-for="Bedrooms" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="bathrooms"></label>
                    <input asp-for="bathrooms" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Area"></label>
                    <input asp-for="Area" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Floor"></label>
                    <input asp-for="Floor" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Parking"></label>
                    <input asp-for="Parking" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="image"></label>
                    <input asp-for="image" class="form-control-file imageFile">
                </div>
                <div class="form-group">
                    <img src="#" class="imagePreview h-25 w-25" style="display:none" />
                </div>
            </div>

            <div class="card-footer ">
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-controller="building" asp-action="index" class="btn btn-primary">Return to Home</a>
            </div>
        </form>
    </div>
</div>
@section script {

    <script>
       
        var imageFile = document.querySelector(".imageFile");
        imageFile.addEventListener("change", event => {
            var imagePreview = document.querySelector(".imagePreview");
            var file = event.target.files[0];
            var read = new FileReader(file);
            if (file) {


                read.readAsDataURL(file);
                read.onload = e => {
                    imagePreview.src = e.target.result;
                    imagePreview.style.display = "block";
                }
            }
        })
    </script>
}