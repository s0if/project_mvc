@model BuildingFormVM

@{
    ViewData["Title"] = "edit";
}
@section Header {
    Edit
}
<div class="col-md-12">

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create Building</h3>
        </div>


        <form asp-controller="Building" asp-action="edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id">
            <input type="hidden"asp-for="Imageaname">
            <div class="card-body">

                <div class="form-group">
                    <label asp-for="DetailsBuilding"></label>
                    <input asp-for="DetailsBuilding" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Bedrooms"></label>
                    <input asp-for="Bedrooms" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="bathrooms"></label>
                    <input asp-for="bathrooms" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Area"></label>
                    <input asp-for="Area" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Floor"></label>
                    <input asp-for="Floor" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Parking"></label>
                    <input asp-for="Parking" class="form-control">
                </div>

                <div class="form-group">
                    <label>
                        @if (Model.siDeleted)
                        {
                            <h5 class="text-success">active</h5>
                        }
                        else
                        {
                            <h5 class="text-danger">not active</h5>
                        }

                    </label>
                    <input asp-for="siDeleted">
                </div>
                <div class="form-group d-flex flex-column ">
                    <label asp-for="image"></label>
                    <img src="~/files/images/@Model.Imageaname" class="h-25 w-25" />
                </div>
                
                <div class="form-group">
                    <label asp-for="image"></label>
                    <input asp-for="image" class="form-control-file">
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-controller="building" asp-action="index" class="btn btn-primary">Return to Home</a>

            </div>
        </form>
    </div>
</div>
